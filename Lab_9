#include "pch.h"
#include <iostream> 

using namespace std;

int semicpos(char *s, int i)
{
	while (s[i] != ';')
	{
		i++;
	}
	return i;
}

void wordsbetween(int i, char *s, int k, int g, int count)
{
	for (i = k; i < g; i++) // перебор значений в диапазоне от первой до второй ';'
	{
		if (s[i] == ' ' && s[i+1] != ' ')
		{
			count++;// счетчик слов по ' '
		}
	}
	cout << "Количество слов в строке " << count;
}

int main()
{
	char s[80];
	int count = 0;
	int  k, g;
	k = 0;
	g = 0;
	system("chcp 1251");
	system("cls");
	cout << "Введите строку: " << endl;
	cin.get(s, 80);
	int i = 0;
	i = semicpos(s, i);// ищет 1;
	k = i + 1;
	i += 1; // перескакивает ';'
	i = semicpos(s, i);//Ищет вторую 
	g = i;// запоминает вторую позицию ';'
	wordsbetween(i, s, k, g, count);
	return 0;
}
