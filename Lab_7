#include "pch.h"
#include <iostream> 

using namespace std;

void print_arr(int* arr);
int sum(int* arr);
void enter_arr(int* p);
void change_arr(int* arr, int s);

const int SIZE = 10;

int main()
{
	setlocale(LC_ALL, "rus");
	int arr[10]{};
	enter_arr(arr);
	print_arr(arr);
	int s = sum(arr);
	cout << "\n" << "Сумма элементов кратных 3 и не кратных 5: " << s << endl;
	change_arr(arr, s);
	print_arr(arr);
}


void enter_arr(int* arr) 
{
	for (int i = 0; i < SIZE; i++) 
	{
		cin >> arr[i];
	}
}

int sum(int* arr)
{
	int s = arr[0];

	for (int i = 0; i < SIZE; i++)
	{
		if ((arr[i] % 3 == 0) && (arr[i] % 5 != 0)) // Проверка крастности 
		{
			s += arr[i]; //Сумма элементов  
		}
	}
	return s;
}


void change_arr(int* arr, int s)
{
	for (int i = 0; i < 10; i++) 
	{
		arr[i] += s;
	}
}

void print_arr(int* arr)
{
	cout << "Массив: " << endl; //вывод массива на экран
	for (int i = 0; i < 10; i++)
	{
		cout << arr[i] << " ";
	}
}
